#include <stdio.h>
#include "3-cal.h"
/**
 * op_add - add two numbers
 * @a: the first number
 * @b: the second number
 * Return: result
 */
int op_add(int a, int b)
{
return (a + b);
}
/**
 * op_add - difference of two numbers
 * @a: the first number
 * @b: the second number
 * Return: result
 */
int op_sub(int a, int b)
{
return (a - b);
}
/**
 * op_add - multiply two numbers
 * @a: the first number
 * @b: the second number
 * Return: result
 */
int op_mul(int a, int b)
{
return (a * b);
}
/**
 * op_div - divide two numbers
 * @a: the first number
 * @b: the second number
 * Return: result
 */
int op_div(int a, int b)
{
return (a / b);
}
/**
 * op_mod - module of a number
 * @a: the first number
 * @b: the second number
 * Return: result
 */
int op_mod(int a, int b)
{
return (a % b);
}
